<li>
  <div class="d-flex align-items-center gap-2 mb-3">
    <%= image_tag attendee.decorate.avatar, class: 'rounded-circle avatar-md' %>
    <%= link_to attendee.name, user_path(attendee) %>
    <% unless attendee == current_user %>
      <% if current_user.following?(attendee) %>
        <%= link_to 'フォローを外す', user_relationships_path(attendee.id), method: :delete %>
      <% else %>
        <%= link_to 'フォローする', user_relationships_path(attendee.id), method: :post %>
      <% end %>
    <% end %> 
  </div>
</li>
